<UserControl x:Class="WPFDataGridFilter.Controls.HeaderFilterTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPFDataGridFilter.Controls"
             x:Name="root"
             MinWidth="70">
    <DockPanel>
        <DockPanel.Resources>
            <Style x:Key="IconButton" TargetType="Button">
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Width" Value="20"/>
                <Setter Property="Height" Value="20"/>
                <Setter Property="Margin" Value="0"/>
            </Style>
            <Style x:Key="FilterInnerTextBoxStyle" TargetType="TextBox">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <DockPanel LastChildFill="True">
                                    <!-- クリアボタンは右側にドッキング -->
                                    <Button x:Name="PART_Clear"
                                            DockPanel.Dock="Right"
                                            Width="18" Height="18"
                                            HorizontalAlignment="Right" VerticalAlignment="Center"
                                            Margin="0,0,2,0"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Focusable="False"
                                            IsTabStop="False"
                                            ClickMode="Press"
                                            FocusVisualStyle="{x:Null}"
                                            Command="{Binding ClearCommand, RelativeSource={RelativeSource AncestorType={x:Type local:HeaderFilterTextBox}}}"
                                            ToolTip="クリア">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </ControlTemplate>
                                        </Button.Template>
                                        <TextBlock Text="✕"/>
                                    </Button>
                                    <!-- テキストは残り領域を占有（ボタンと重ならない） -->
                                    <ScrollViewer x:Name="PART_ContentHost" Margin="0,0,4,0"/>
                                </DockPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter TargetName="PART_Clear" Property="Visibility" Value="Collapsed"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </DockPanel.Resources>
        <!-- フィルタ未展開: ボタン表示（右側にドッキング） -->
        <Button x:Name="FilterButton"
                DockPanel.Dock="Right"
                ToolTip="フィルター"
                HorizontalAlignment="Right">
            <Button.Style>
                <Style BasedOn="{StaticResource IconButton}" TargetType="Button">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsExpanded, ElementName=root}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <Image Width="16" Height="16">
                <Image.Style>
                    <Style TargetType="Image">
                        <Setter Property="Source" Value="/WPFDataGridFilter;component/Resource/filter_24.png"/>
                        <Setter Property="Stretch" Value="Uniform"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsFilterActive, ElementName=root}" Value="True">
                                <Setter Property="Source" Value="/WPFDataGridFilter;component/Resource/filtered_24.png"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
        </Button>
        <!-- フィルタ展開: テキスト + クリア（残り領域に表示） -->
    <DockPanel>
            <DockPanel.Style>
                <Style TargetType="DockPanel">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsExpanded, ElementName=root}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DockPanel.Style>

            <TextBox x:Name="InputBox" Margin="0" Padding="2" MinWidth="20" Style="{StaticResource FilterInnerTextBoxStyle}"
                     Text="{Binding FilterText, ElementName=root, UpdateSourceTrigger=LostFocus}"
                     LostKeyboardFocus="InputBox_LostKeyboardFocus"
                     KeyDown="InputBox_KeyDown"/>
        </DockPanel>
    </DockPanel>

    <UserControl.ContextMenu>
        <ContextMenu x:Name="FilterMenu"/>
    </UserControl.ContextMenu>
</UserControl>
