<UserControl x:Class="WPFDataGridFilter.Controls.FilterTimeColumnHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPFDataGridFilter.Controls">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <local:HeaderFilterTextBox x:Name="PART_FilterBox"
                                       DockPanel.Dock="Right"
                                       FilterText="{Binding FilterText, RelativeSource={RelativeSource AncestorType=local:FilterTimeColumnHeader}, Mode=TwoWay}"
                                       FilterKey="{Binding FilterKey, RelativeSource={RelativeSource AncestorType=local:FilterTimeColumnHeader}}"
                                       ExternalFilterActive="{Binding ElementName=PART_DateRangeFilter, Path=IsFilterd}"/>
            <TextBlock Text="{Binding HeaderText, RelativeSource={RelativeSource AncestorType=local:FilterTimeColumnHeader}}"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       Margin="0,0,4,0"/>
        </DockPanel>
        <local:HeaderDateRangeFilter x:Name="PART_DateRangeFilter"
                                     DockPanel.Dock="Top"
                                     HorizontalAlignment="Center" 
                                     From="{Binding RangeFrom, RelativeSource={RelativeSource AncestorType=local:FilterTimeColumnHeader}, Mode=TwoWay}"
                                     To="{Binding RangeTo, RelativeSource={RelativeSource AncestorType=local:FilterTimeColumnHeader}, Mode=TwoWay}"
                                     ClearCommand="{Binding RangeClearCommand, RelativeSource={RelativeSource AncestorType=local:FilterTimeColumnHeader}}"/>
    </DockPanel>
</UserControl>
