<UserControl x:Class="WPFDataGridFilter.Controls.HeaderDateRangeFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="root">
    <UserControl.Resources>
        <!-- 共有テンプレートは App.xaml でマージ済みのため、ここでは参照のみ -->
    </UserControl.Resources>
    <DockPanel>
        <!-- トグルボタン -->
        <ToggleButton x:Name="PART_PopupToggle" Content="⏱ 時刻フィルター " Padding="4,0" IsChecked="{Binding IsOpen, ElementName=root, Mode=TwoWay}">
            <ToggleButton.Resources>
                <SolidColorBrush x:Key="ToggleButtonNormalStrokeBrush" Color="#F0F0F0" />
                <Style TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsFilterd, ElementName=root, Mode=OneWay}" Value="True">
                            <Setter Property="Foreground" Value="#00FF00"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ToggleButton.Resources>
        </ToggleButton>

        <!-- ポップアップ本体 -->
        <Popup PlacementTarget="{Binding ElementName=PART_PopupToggle}"
           Placement="Bottom" StaysOpen="False"
               IsOpen="{Binding IsOpen, ElementName=root, Mode=TwoWay}">
            <Border Background="White" BorderBrush="#DDD" BorderThickness="1" Padding="8" CornerRadius="4">
                <StackPanel Orientation="Vertical" MinWidth="320">
                    <TextBlock Text="期間指定" FontWeight="SemiBold" Foreground="Black" Margin="0,0,0,6"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <DatePicker SelectedDate="{Binding From, ElementName=root, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" Width="130"/>
                        <TextBox Width="80" Margin="4,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Center" ToolTip="HH:mm:ss" Text="{Binding FromTimeText, ElementName=root, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" KeyDown="TimeBox_KeyDown"/>
                        <TextBlock Text="~" VerticalAlignment="Center" Margin="6,0"/>
                        <DatePicker SelectedDate="{Binding To, ElementName=root, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" Width="130"/>
                        <TextBox Width="80" Margin="4,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Center" ToolTip="HH:mm:ss" Text="{Binding ToTimeText, ElementName=root, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" KeyDown="TimeBox_KeyDown"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="25">
                        <Button Content="クリア" Command="{Binding ClearCommand, ElementName=root}" Width="60" Margin="0,0,6,0"/>
                        <Button Content="閉じる" Command="{Binding ClosePopupCommand, ElementName=root}" Width="60"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>
    </DockPanel>
</UserControl>
